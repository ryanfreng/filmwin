
wb = xlsx_package.workbook
wb.add_worksheet(name: "Submissions") do |sheet|
  sheet.add_row [ 'Parent/Category', 
                  'Submission',
                  'Entrant',
                  'User', 
                  'Recipient Name',
                  'Title', 
                  'Client', 
                  'Budget', 
                  'Production Company', 
                  'Director', 
                  'Editor', 
                  'Producer', 
                  'Cinematographer',
                  'Extra Crew', 
                  'Video',
                  'Comments' ]
  @submissions.each do |sub|
    video = !sub.video_url.blank? ? sub.video_url : !sub.upload_url.blank? ? sub.upload_url : 'No video'
    sheet.add_row [ sub.category.parent.name + '/' + sub.category.name, 
                    sub.id,
                    sub.entrant_name,
                    sub.user.name, 
                    sub.recipient_name,
                    sub.title,
                    sub.client,
                    sub.budget,
                    sub.production_company,
                    sub.director,
                    sub.editor,
                    sub.producer,
                    sub.cinematographer,
                    sub.extra_crew,
                    video,
                    sub.comments_other], :types => [nil, :string]    
  end
end