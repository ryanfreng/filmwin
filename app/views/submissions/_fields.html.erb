<h3><%= @event.name %><%= s.hidden_field :event_id, value: @event.id %></h3>
<%= s.hidden_field :user_id %>

<%= render 'shared/error_messages', object: @submission %>

<h4>Contact Information</h4>
<p class="help-block">Who is entering this submission, if entering for someone else.</p>

<%= s.label :contact_name, "Name" %>
<%= s.text_field :contact_name, placeholder: "orson wells", class: "form-control" %>

<%= s.label :contact_name, "Email" %>
<%= s.text_field :contact_email, placeholder: "orson wells", class: "form-control" %>

<%= s.label :contact_name, "Cell Phone" %>
<%= s.text_field :contact_phone, placeholder: "orson wells", class: "form-control" %>

<h4>Submission Information</h4>
* <%= s.label :category_id %>
<%= s.grouped_collection_select :category_id, @event.parent_categories, :children, :name, :id, :name, { prompt: "Choose a category" }, { class: "form-control" } %>

* <%= s.label :title %>
<%= s.text_field :title, placeholder: 'something awesome', class: "form-control" %>

<div class="form-group">
<%= s.label :video_url %>
<%= s.text_field :video_url, placeholder: "youtube & vimeo", class: "form-control" %>
<p class="help-block">ONLY youtube and vimeo links! If you need to upload, you can do that after you submit this form. If password required, please put in notes below.</p>
</div>

<%= s.label :running_time %>
<%= s.text_field :running_time, placeholder: ":30, 1.5m", class: "form-control" %>

<h4>Award Information </h4>
<p class="help-block">If your project is selected as a winning entry, this informaDon will be printed on
the awards as you have entered it.</p>

<div class="form-group">
* <%= s.label :recipient_name, "Awardee" %>
<%= s.text_field :recipient_name, placeholder: "m night shyamalan", class: "form-control" %>
<p class="help-block">Who will receive the award should one be given (individual or company).</p>
</div>

<%= s.label :client %>
<%= s.text_field :client, placeholder: "walt disney", class: "form-control" %>

<%= s.label :production_company %>
<%= s.text_field :production_company, placeholder: "edison studios", class: "form-control" %>

<%= s.label :producer%>
<%= s.text_field :producer, placeholder: "jj abrams", class: "form-control" %>

<%= s.label :director%>
<%= s.text_field :director, placeholder: "spielberg", class: "form-control" %>

<%= s.label :cinematographer, "DP/Camera" %>
<%= s.text_field :cinematographer, placeholder: "richard crudo", class: "form-control" %>

<%= s.label :editor%>
<%= s.text_field :editor, placeholder: "alan heim", class: "form-control" %>

<%= s.label :animator%>
<%= s.text_field :animator, placeholder: "john lasseter", class: "form-control" %>

<%= s.label :writer%>
<%= s.text_field :writer, placeholder: "aaron sorkin", class: "form-control" %>

<%= s.label :sound_designer%>
<%= s.text_field :sound_designer, placeholder: "aaron sorkin", class: "form-control" %>

<div class="form-group">
<%= s.label :extra_crew, "Additional Crew/Credits" %>
<%= s.text_area :extra_crew, class: "form-control" %>
<p class="help-block">Please list any additional credits for the project.</p>
</div>

<%= s.label :budget %>
<%= s.text_field :budget, placeholder: "you mean like a number... on paper?", class: "form-control" %>

<div class="form-group">
* <%= s.label :comments_other, "Objective, interesting challenges or unique aspects youâ€™d like the judges to consider." %>
<%= s.text_area :comments_other, class: "form-control" %>
<p class="help-block">You must enter a goal! If you do not, we will not know how to judge if your piece achieves it's purpose. Be as detailed as possible.</p>
</div>