<% provide(:title, 'New Submission') %>
<h1>New Submission</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@submission) do |s| %>
      <%= render 'fields', s: s, locals: { event: @event, user: current_user } %>

      <%= s.submit "Submit entry", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
