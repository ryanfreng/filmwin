<% provide(:title, 'New Category') %>
<h1>New category for "<%= @event.name %>"</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category) do |c| %>
      <%= render 'fields', c: c %>

      <%= c.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
